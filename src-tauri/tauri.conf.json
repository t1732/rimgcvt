{
	"$schema": "https://schema.tauri.app/config/2",
	"productName": "rimgcvt",
	"version": "0.2.0",
	"identifier": "com.github.t1732",
	"build": {
		"beforeDevCommand": "bun run dev",
		"devUrl": "http://localhost:1420",
		"beforeBuildCommand": "bun run build",
		"frontendDist": "../dist"
	},
	"app": {
		"windows": [
			{
				"title": "rimgcvt",
				"width": 1200,
				"height": 800,
				"minWidth": 800,
				"minHeight": 600,
				"center": true,
				"devtools": true,
				"dragDropEnabled": true
			}
		],
		"security": {
			"csp": "default-src 'self'; img-src 'self' asset: http://asset.localhost https://asset.localhost; style-src 'self' 'unsafe-inline'; script-src 'self'",
			"assetProtocol": {
				"enable": true,
				"scope": ["**"]
			}
		},
		"macOSPrivateApi": true
	},
	"bundle": {
		"active": true,
		"targets": "all",
		"icon": [
			"icons/32x32.png",
			"icons/128x128.png",
			"icons/128x128@2x.png",
			"icons/icon.icns",
			"icons/icon.ico"
		],
		"windows": {
			"wix": null,
			"nsis": {
				"installerIcon": "icons/icon.ico",
				"headerImage": "icons/icon.ico"
			}
		}
	}
}
